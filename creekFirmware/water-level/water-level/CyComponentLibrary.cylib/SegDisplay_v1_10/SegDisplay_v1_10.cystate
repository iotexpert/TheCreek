<?xml version="1.0" encoding="utf-8"?>
<ComponentStateRules Version="1">
    <Rule>
        <Pattern>
            <Architecture>PSoC3</Architecture>
            <Family>*</Family>
            <Revision>*</Revision>
            <Device>*</Device>
        </Pattern>
        <State>Obsolete</State>
        <Severity>Error</Severity>
        <Message>The SegDisplay component (`$INSTANCE_NAME`) is not supported for the PSoC 3 architecture. The Segment LCD component should be used instead.</Message>
    </Rule>
    <Rule>
        <Pattern>
            <Architecture>PSoC5</Architecture>
            <ArchMember>PSoC5A</ArchMember>
        </Pattern>
        <State>Production</State>
        <Severity>None</Severity>
        <Message />
    </Rule>
    <Rule>
        <Pattern>
            <Architecture>PSoC5</Architecture>
            <ArchMember>PSoC5LP</ArchMember>
        </Pattern>
        <State>Obsolete</State>
        <Severity>Error</Severity>
        <Message>The SegDisplay component (`$INSTANCE_NAME`) is not supported for the PSoC 5LP architecture. The Segment LCD component should be used instead.</Message>
    </Rule>
</ComponentStateRules>